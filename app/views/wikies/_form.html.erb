<div class="row">
  <div class="col-lg-11">
    <%= form_for(@wiky, html: {class: "form-horizontal"}) do |f| %>
      <fieldset>
        <legend><%= legend_text %></legend>
        <div class="form-group">
          <%= f.label :title, class: "col-lg-2 control-label" %>
          <div class="col-lg-10">
              <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :body, class: "col-lg-2 control-label" %>
          <div class="col-lg-10">
            <%= f.text_area :body, class: "form-control", rows: "10" %>
            <span class="help-block">
              Thank you for contributing to this project
            </span>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-2 control-label">Private or Public</label>
          <div class="col-lg-10">
            <div class="radio">
              <label> 
                <%= f.radio_button :public, "true" %>Public
              </label>             
            </div>
            <div class="radio">
              <label>
                <%= f.radio_button :public, "false" %>Private
              </label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= link_to "cancel", "/wikies/#{@wiky.id}", class: "btn btn-default" %>
            <%= f.submit class: "btn btn-primary" %>
          </div>
        </div>
      </fieldset>
      <% end %>
  </div>
</div>










