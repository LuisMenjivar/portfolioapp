<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <div class="list-group">
          <h1 class="list-group-item active">
          Go ahead log in
          </h1>
       </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="well bs-component">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <fieldset>
          <legend>Sign In</legend>
          <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-10">
              <%= f.email_field :email, autofocus: true,  value: "standard@example.com", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-10">
              <%= f.password_field :password, autocomplete: "off", value: "helloworld", class: "form-control"%>
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Remember Me
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <%= f.submit "Log in", class: "btn btn-warning" %>
            </div>
          </div>
        </fieldset>   
        <% end %> 
      </div>
    </div>
    <div class="col-lg-6">
      <div class="well bs-component">
        <fieldset>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <legend>Sign up</legend>
          <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Email</label>
            <div class="col-lg-10">
              <%= f.email_field :email, autofocus: true, :placeholder => "Email", class: "form-control"  %>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPassword" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-10">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", :placeholder => "#{@minimum_password_length} characters minimum" if (@minimum_password_length) %>
            </div>
            <label for="inputPassword" class="col-lg-2 control-label">Password</label>
            <div class="col-lg-10">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control",:placeholder => "re enter password"  %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
        </fieldset> 
        <% end %>   
      </div>
    </div>
  </div>
</div>
<a href="/users/password/new" class="label label-danger">Forgot your Password?</a></br>
<a href="/users/confirmation/new" class="label label-danger">Didn't Receive confirmation instructions?</a></br>



