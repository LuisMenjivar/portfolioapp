<h3>Todo List</h3>
<%= render 'form', :locals => {:@todo => @todo} %>
<div class = "container">
  <div class="row">
    <div class="col-sm-10">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>Things to do</th>
            <th>Time Left</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @todos.each do |todo|%>
            <% color = ["info", "warning", "success", "danger", "active"] %>
            <tr class = <%= color[(@todos.index(todo))%5] %> >
              <td><%= @todos.index(todo) + 1%>.<%= todo.description %></td>   
              <td>
              5 days
              <div class="progress progress-striped active">
                <div class="progress-bar" style="width: 50%;"></div>
              </div>        
              </td>
              <td align="right">
                <%= link_to "delete", {action: "destroy", id: todo.id}, method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
