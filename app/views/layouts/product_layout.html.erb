  <div id="banner">
    <%= image_tag("http://i.ebayimg.com/00/s/NDY1WDcxNw==/z/WGoAAOSwNSxUyz36/$_35.JPG") %>
    <%= @page_title || "Online Store" %>
  </div>
  <div id="columns">
