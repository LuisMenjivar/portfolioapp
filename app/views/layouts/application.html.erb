<!DOCTYPE html>
<html>
  <head>
    <title>Portfolioapp</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class='<%= controller.controller_name %>' >
    <div class="container">
      <div class="bs-docs-section clearfix">
        <div class="row">
          <div class="col-lg-12">
            <div class="bs-component">
              <nav class="navbar navbar-inverse navbar-fixed-top"  >
                <div class="container-fluid">
                  <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
                  </div>
                  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
                    <ul class="nav navbar-nav">
                      <li ><a href="/">Home<span class="sr-only">(current)</span></a></li>
                      <li ><a href="/todos">Todos<span class="sr-only">(current)</span></a></li>
                      <li ><a href="/wikies">Wikies<span class="sr-only">(current)</span></a></li>
                      <li ><a href="/topics/home">Bookmarks<span class="sr-only">(current)</span></a></li>
                      <li ><a href="/store/index">Store<span class="sr-only">(current)</span></a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                      <% if current_user %>
                        <li><%= link_to "", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>
                        <li><%= link_to "", edit_user_registration_path, class: "glyphicon glyphicon-user" %></li>
                      <% else %>
                        <li><%= link_to "", new_user_registration_path, class: "glyphicon glyphicon-log-in" %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </nav>
            </div>
            <% if flash[:notice] %>
              <div class="alert alert-dismissible alert-success">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= flash[:notice] %>
              </div>
              <% elsif flash[:error] %>
              <div class="alert alert-dismissible alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= flash[:error] %>
              </div>
              <% elsif flash[:alert] %>
              <div class="alert alert-dismissible alert-info">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <%= flash[:alert] %>
            </div>

            <% end %>
          </div>
        </div>
      </div>

      
      <%= content_for?(:content) ? yield(:content) : yield %>


      <footer>
       
      </footer>
    </div>
  </body>
</html>
